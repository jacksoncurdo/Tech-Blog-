<h1>The Tech Blog</h1>

{{#each posts as |post| }}
<div class="card">
  <h4 class="card-header">
    <div><a class="post-title-link" href="/post/{{post.id}}">{{post.title}}</a></div>
    <div class="detail-font">Posted by {{user.username}} on {{format_date post.date_created}}</div>
  </h4>
  <div class="card-body">
    <p class="card-text">{{post.content}}</p>
  </div>
</div>
{{/each}}
